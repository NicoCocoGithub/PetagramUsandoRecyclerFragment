<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="180dp"
    cardview:cardCornerRadius="4dp"
    cardview:cardElevation="5dp"


    >
    <RelativeLayout
        android:id="@+id/LinearLayout_cardview"
        android:layout_width="200dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImageView_mascota"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <TextView
                android:layout_width="22dp"
                android:layout_height="27dp"
                android:text="5"
                android:id="@+id/textView_raits"
                android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/ImageView_huesoAmarrillo"
            android:layout_toStartOf="@+id/ImageView_huesoAmarrillo" />

        <ImageView
            android:id="@+id/ImageView_huesoAmarrillo"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/hueso_amarillo_item"
            android:scaleType="centerInside"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/ImageView_mascota"
            android:layout_alignEnd="@+id/ImageView_mascota" />


    </RelativeLayout>

</android.support.v7.widget.CardView>